//length of a char array
#include <bits/stdc++.h>
using namespace std;
int length(char a[]){
    int c =0;
    for(int i=0;a[i]!= '\0';i++){
        c++;
    }
    return c;
}
int main() {
 char name[20];
 cin>>name ;
 int len = length(name);
 cout<<"The length of your name is: "<<len;

    return 0;
}

//reversing a str

#include <bits/stdc++.h>
using namespace std;
void reverse(char ch[],int n){
    int s =0;
    int e = n-1;
    while(s<=e){
        swap(ch[s],ch[e]);
        s++;
        e--;
    }
    cout<<"reversed string is :"<<ch;
    
}
int main() {
    int n;
    cin>>n;
 char name[n] ;
 cin>>name ;
reverse(name,n);

    return 0;
}
